
@{
    ViewBag.Title = "Index";
}

<h2 class="col-md-11 text-center">Lista de Tipos</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-lg-right" href="@Url.Action("Cadastro")">
            Novo Tipo
        </a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Tipo</th>
            <th>Marca</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Tipo tipo in ViewBag.Tipos)
        {
            <tr>
                <td>@tipo.Id</td>
                <td>@tipo.Nome</td>
                <td>@tipo.Marca.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new {id = tipo.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editar </a>

                    <a href="@Url.Action("Apagar", new {id = tipo.Id})" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>  