
@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro</h2>

<form action="@Url.Action("Store")" method="post">
    <br />
    <div class="form-group">
        <label for="tipo-cadastro-nome">Nome</label>
        <input id="tipo-cadastro-nome" name="nome" class="form-control" />

    </div>

    <div class="form-group">
        <label for="tipo-cadastro-marca">Marca</label>
        <select class="form-control" id="tipo-cadastro-marca" name="idMarca">
            <option>Selecione uma Marca</option>
        </select>
    </div>

    <button type="submit" class="btn btn-outline-success float-lg-right">Cadastrar</button>

    <div class="row">
        <div class="col-12">
            <a class="btn btn-outline-success float-right" href="@Url.Action("Index")">Ir para lista de Tipos</a>
        </div>
    </div>
</form>