
@{
    ViewBag.Title = "Cadastro";
}
    <form action="@Url.Action("Cadastro")" method="post">

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="campo-nome">Marca</label>
                    <input type="text" name="nome" id="campo-nome" class="form-control" required maxlength="45" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <button class="btn btn-outline-success float-right" type="submit">
                        <i class="fas fa-save"></i> Cadastrar
                    </button>
                </div>
            </div>
        </div>


            <table class="table table-striped table-bordered table-hover form-group" id="tabela-marcas">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Marca</th>
                        <th>Ação</th>
                    </tr>
                </thead>

                <tbody></tbody>
            </table>
        </div>

    </form>





        @section Scripts{
            <script src="~/Scripts/marca/cadastro-marca.js"></script>
        }

