
@{
    ViewBag.Title = "Index";
}

<h2>Marcas</h2>

<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-right" href="@Url.Action("Cadastro")">Nova Marca</a>
    </div>
</div>

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Marca</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Marca</th>
            <th>Ação</th>
        </tr>

    <tbody>
        @foreach (Model.Marca marca in ViewBag.Marcas)
         {
            <tr>
                <td>@marca.Id</td>
                <td>@marca.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new {id = marca.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editar</a>

                    <a href="@Url.Action("Apagar", new { id = marca.Id })" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Apagar</a>

                </td>
            </tr>
         }
    </tbody>

</table>



