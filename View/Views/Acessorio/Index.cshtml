
@{
    ViewBag.Title = "Index";
}

<h2 class="col-md-11 text-center">Lista de Acessórios</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-lg-right" href="@Url.Action("Cadastro")">
            Novo acessorio
        </a>
    </div>
</div>
<br />

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>Valor</th>
            <th>Tipo</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Acessorio acessorio in ViewBag.Acessorios)
        {
        <tr>
            <td>@acessorio.Id</td>
            <td>@acessorio.Nome</td>
            <td>@acessorio.Preco</td>
            <td>@acessorio.Tipo.Nome</td>
            <td>
                <a href="@Url.Action("Editar", new {id = acessorio.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editar </a>

                <a href="@Url.Action("Apagar", new {id = acessorio.Id})" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Apagar </a>
            </td>
        </tr>
        }
    </tbody>
</table>

