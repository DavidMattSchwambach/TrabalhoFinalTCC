
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

<form action="@Url.Action("Editar")" method="post">
    <input type="hidden" name="id" value="@ViewBag.Fornecedor.Id" />

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-nome">Nome</label>
                <input type="Text" name="nome" id="campo-nome" class="form-control"
                       value="@ViewBag.Fornecedor.Nome" required maxlength="45" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="form-group">
                <label for="campo-preco">Preço</label>
                <input type="Text" name="preco" onkeypress="$(this).mask('999,99')" id="campo-preco" class="form-control"
                       value="@ViewBag.Fornecedor.Preco" required maxlength="45" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="fornecedor-cadastro-marca">Marca</label>
        <select class="form-control" id="campo-marca" name="idMarca" required="required">
            <option disabled selected>Selecione Alguma Marca</option>
            @foreach (Model.Marca marca in ViewBag.Marcas)
            {
                if (marca.Id == ViewBag.Fornecedor.IdMarca)
                {
                    <option selected value="@marca.Id">@marca.Nome</option>
                }
                else
                {
                    <option value="@marca.Id">@marca.Nome</option>
                }
            }
        </select>
    </div>

    <div class="row">
        <div class="col-12">
            <button class="btn btn-success float-right" type="submit">
                <i class="fas fa-save"></i> Editar
            </button>
        </div>
    </div>
</form>