
@{
    ViewBag.Title = "Index";
}


<h2 class="col-md-11 text-center">Lista de Fornecedores</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-lg-right" href="@Url.Action("Cadastro")">
            Novo Fornecedor
        </a>
    </div>
</div>
<br />
<div class="card-container">
    <div class="row">
        @foreach (Model.Fornecedor fornecedor in ViewBag.Fornecedores)
        {
            <div class="card col-2" style="margin-right: 5px; margin-left: 30px;">
                <div class="card-block">
                    <h4 class="card-title">@fornecedor.Nome</h4>
                </div>
                <ul class="list-group list-group-dividered px-20 mb-0">
                    <li class="list-group-item px-0">Id:    @fornecedor.Id</li>
                    <li class="list-group-item px-0">Marca: @fornecedor.Marca.Nome</li>
                    <li class="list-group-item px-0">Preço: @fornecedor.Preco</li>
                    <li class="list-group-item px-0">Quantidade: @fornecedor.Quantidade</li>
                </ul>
                <br />
                <div class="row">
                    <a href="@Url.Action("Editar", new {id = fornecedor.Id})" class="btn btn-outline-primary offset-2"><i class="fas fa-pen"></i> Editar </a>
                    <a href="@Url.Action("Apagar", new {id = fornecedor.Id})" class="btn btn-outline-danger offset-2"><i class="fas fa-trash"></i> Apagar</a>
                </div>
                <br />
            </div>
        }
    </div>
</div>
