
@{
    ViewBag.Title = "Index";
}

<h2 class="col-md-11 text-center">Lista de Fornecedores</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-lg-right" href="@Url.Action("Cadastro")">
            Novo Fornecedor
        </a>
    </div>
</div>
<br />

<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nome</th>
            <th>preço</th>
            <th>Marca</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Model.Fornecedor fornecedor in ViewBag.Fornecedores)
        {
            <tr>
                <td>@fornecedor.Id</td>
                <td>@fornecedor.Nome</td>
                <td>@fornecedor.Preco</td>
                <td>@fornecedor.Marca.Nome</td>
                <td>
                    <a href="@Url.Action("Editar", new {id = fornecedor.Id})" class="btn btn-outline-primary"><i class="fas fa-pen"></i> Editar </a>

                    <a href="@Url.Action("Apagar", new {id = fornecedor.Id})" class="btn btn-outline-danger">
                        <i class="fas fa-trash"></i> Apagar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>  