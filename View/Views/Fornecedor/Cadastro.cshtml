
@{
    ViewBag.Title = "Cadastro";
}
<h2 class="text-center">Fornecedores</h2>
<br />

<form action="@Url.Action("Store")" method="post">

    <div class="row">
        <div class="col-6">

            <div class="form-group">
                <label for="campo-nome">Nome do Fornecedor</label>
                <input class="form-control" id="campo-nome" name="nome" required="required" type="text" placeholder="Digite o Nome do Fornecedor"/>
            </div>
        </div>
        <div class="col-6">
            <div class="form-group">
                <label for="campo-marca">Marca</label>
                <select class="form-control" id="campo-marca" name="idMarca" required="required">
                    <option disabled selected>Selecione Alguma Marca</option>
                    @foreach (Model.Marca marca in ViewBag.Marcas)
                    {
                        if (marca.RegistroAtivo == true)
                        {
                            <option value="@marca.Id">@marca.Nome</option>
                        }

                    }
                </select>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <div class="form-group">
                <label for="campo-preco">Valor</label>
                <input class="form-control" id="campo-preco" name="preco" onkeypress="$(this).mask('999,99')" required="required" type="text" placeholder="Valor do Produto" />
            </div>
        </div>
    </div>

        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label for="campo-quantidade">Quantidade</label>
                    <input class="form-control" id="campo-quantidade" name="quantidade" required="required" type="number" placeholder="Digite a quantidade" />
                </div>
            </div>

            <div class="col-12">
                <br />
                <br />
                <button type="submit" class="btn btn-outline-success float-lg-right m-5">Cadastrar</button>

                <a class="btn btn-outline-success float-lg-right m-5" href="@Url.Action("Index")">Ir para lista de Fornecedores</a>
            </div>
        </div>
</form>
