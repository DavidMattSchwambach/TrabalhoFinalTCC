
@{
    ViewBag.Title = "Index";
}

<h2 class="col-md-11 text-center">Lista de Bebidas</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-outline-success float-lg-right" href="@Url.Action("Cadastro")">
            Nova Bebida
        </a>
    </div>
</div>
<br />

<div class="card-container">
    <div class="row">
        @foreach (Model.Bebida bebida in ViewBag.Bebidas)
        {
            <div class="card col-2" style="margin-right: 10px; margin-left: 30px;">
                <div class="card-block">
                    <h4 class="card-title">@bebida.Nome</h4>
                </div>
                <ul class="list-group list-group-dividered px-20 mb-0">
                    <li class="list-group-item px-0">Id:    @bebida.Id</li>
                    <li class="list-group-item px-0">Tipo: @bebida.Tipo.Nome</li>
                    <li class="list-group-item px-0">Preço: @bebida.Valor</li>
                    <li class="list-group-item px-0">Marca: @bebida.Marca.Nome</li>
                    
                </ul>
                <br />
                <div class="row">
                    <a href="@Url.Action("Editar", new {id = bebida.Id})" class="btn btn-outline-primary offset-2"><i class="fas fa-pen"></i> Editar </a>
                    <a href="@Url.Action("Apagar", new {id = bebida.Id})" class="btn btn-outline-danger offset-2"><i class="fas fa-trash"></i> Apagar</a>
                </div>
                <br />
            </div>
        }
    </div>
</div>


