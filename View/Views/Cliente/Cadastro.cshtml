
@{
    ViewBag.Title = "Cadastro";
}
<div class="container">
    <form action="/usuario/cadastro" method="post">
        <h2 class="col-md-12 text-center">Cadastro</h2>
        <div class="form-group">
            <label for="campo-nome">Seu nome</label>
            <input class="form-control" id="campo-nome" name="nome" required="required" type="text" placeholder="Nome" />
        </div>

        <div class="form-group">
            <label for="campo-dataNascimento">Data de Nascimento</label>
            <input class="form-control" id="campo-dataNascimento" name="dataNascimento" required="required" type="datetime-local" palceholder="Data de Nascimento" />
        </div>

        <div class="form-group">
            <label for="campo-cpf">Cpf</label>
            <input class="form-control" id="campo-cpf" name="cpf" required="required" type="text" palceholder="Cpf"/>
        </div>

        <div class="form-group">
            <label for="campo-telefone">Telefone</label>
            <input class="form-control" id="campo-telefone" name="telefone" required="required" type="text"  palceholder="Telefone"/>
        </div>

        <div class="form-group">
            <label for="campo-email">E-mail</label>
            <input class="form-control" id="campo-email" name="email" required="required" type="email" palceholder=""/>
        </div>

        <div class="form-group">
            <label for="campo-senha">Senha</label>
            <input class="form-control" id="campo-senha" name="senha" required="required" type="password" />
        </div>

        <button type="submit" class="btn btn-primary col-md-12">Cadastrar</button>
    </form>
</div>